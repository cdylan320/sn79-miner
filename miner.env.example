# Environment variables for miner/testnet workflows
JSON_PASSWORD='Rootroot123!@#!'
# Use relative path for JSON file (relative to script directory)
JSON_PATH="bittensor.json"
WALLET_NAME="cold_draven"
HOTKEY_NAME="miner"
# Use dynamic wallet paths based on current user
WALLET_PATH="$HOME/.bittensor/wallets"
BT_WALLET_PATH="$HOME/.bittensor/wallets"
NETUID=366
NETWORK="test"
VENV="$HOME/btcli-latest"
# Override to use project-local venv
VENV="$HOME/sn79-miner/venv"
# Thread caps to avoid OpenBLAS spawning too many threads (GPU mode needs few CPU threads)
OPENBLAS_NUM_THREADS=1
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1
NUM_PROCESSES=32
BT_LOGGING=DEBUG
BT_PROGRESS=1
USE_TORCH=1
CUDA_VISIBLE_DEVICES=0

